{
    "extends": "astro/tsconfigs/base",
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "baseUrl": ".",
        "paths": {
            "@assets/*": ["src/assets/*"],
            "@components/*": ["src/components/*"],
            "@layouts/*": ["src/layouts/*"],
            "@content/*": ["src/content/*"],
            "@public/*": ["public/*"],
            "@styles/*": ["src/styles/*"],
        },
        "strictNullChecks": true
    }
}
