{
  "name": "nf-co.re",
  "version": "1.0.0",
  "description": "<img src=\"public_html/assets/img/logo/nf-core-logo.png\" width=\"400\">",
  "main": "index.js",
  "scripts": {
    "test": "./node_modules/.bin/backstop test",
    "watch-sass": "sass --load-path=node_modules/ --watch public_html/assets/scss:public_html/assets/css",
    "compile-sass": "sass --load-path=node_modules/ public_html/assets/scss:public_html/assets/css",
    "prefix-css": "postcss --use autoprefixer -b 'last 5 versions' --replace public_html/assets/css/*nf-core*.css ",
    "compress-css": "sass --load-path=node_modules/ public_html/assets/scss:public_html/assets/css --style compressed",
    "copy-assets": "cp node_modules/datatables.net-bs5/css/dataTables.bootstrap5.min.css public_html/assets/css && cp node_modules/chart.js/dist/Chart.min.css public_html/assets/css && cp node_modules/datatables.net-bs5/js/dataTables.bootstrap5.min.js public_html/assets/js && cp node_modules/bootstrap/dist/js/bootstrap.bundle.min.* public_html/assets/js && cp node_modules/jquery/dist/jquery.min.* public_html/assets/js/ && cp node_modules/chart.js/dist/Chart.min.js public_html/assets/js/",
    "build-css": "npm-run-all compile-sass prefix-css compress-css",
    "build-prod": "npm run copy-assets && npm run build-css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nf-core/nf-co.re.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nf-core/nf-co.re/issues"
  },
  "homepage": "https://github.com/nf-core/nf-co.re#readme",
  "devDependencies": {
    "@highlightjs/cdn-assets": "^11.2.0",
    "autoprefixer": "^10.0.2",
    "backstopjs": "^5.3.4",
    "bootstrap": "^5.0.2",
    "bootstrap-dark-5": "^1.0.2",
    "chart.js": "^2.8.0",
    "datatables.net": "^1.10.25",
    "datatables.net-bs5": "^1.10.25",
    "jquery": "^3.6.0",
    "jquery-ui": "^1.12.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^8.2.0",
    "sass": "^1.29.0"
  }
}
