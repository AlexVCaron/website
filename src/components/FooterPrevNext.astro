---
import { Icon } from 'astro-icon';
import { CollectionEntry } from 'astro:content';

export interface Props {
    md_github_url?: string;
    prev_page: CollectionEntry<'docs'>;
    next_page: CollectionEntry<'docs'>;
}
const { md_github_url, prev_page, next_page } = Astro.props;
// console.log(prev_page);
// console.log(next_page);
---

<footer class="d-flex bg-body-tertiary text-body-tertiary">
    <div
        class="flex-fill btn nav-btn rounded-0 text-end py-md-3 py-2 px-3 text-body d-flex flex-column flex-fill w-100"
    >
        {
            prev_page && (
                <div>
                    <span class="text-muted d-none d-md-inline">Previous: </span>
                    <i class="fa-solid fa-arrow-left me-1 d-md-none" />
                    <a class="text-body text-decoration-none" href={'/docs/' + prev_page.slug}>
                        {prev_page.data.title}
                    </a>
                </div>
            )
        }
    </div>
    <div class="flex-shrink-1 align-self-center text-center">
        <p class="m-0 px-3 text-body d-none d-md-inline-block">
            <i class="fab fa-github"></i> Markdown source:
            <code>
                <a href={md_github_url}>{md_github_url}</a>
            </code>
        </p>
        <p class="m-0 px-3 d-md-none text-center">
            <a class="text-body" href={md_github_url}><i class="fab fa-github"></i> Markdown source</a>
        </p>
    </div>
    <div
        class="flex-fill btn nav-btn rounded-0 text-start py-md-3 py-2 px-3 text-body d-flex flex-column justify-content-start flex-fill w-100"
    >
        {
            next_page && (
                <div>
                    <span class="text-muted d-none d-md-inline">Next: </span>
                    <i class="fa-solid fa-arrow-right ms-1 d-md-none" />
                    <a class="text-body text-decoration-none" href={'/docs/' + next_page.slug}>
                        {next_page.data.title}
                    </a>
                </div>
            )
        }
    </div>
    <style lang="scss">
        @import '../styles/_variables.scss';
        svg {
            fill: currentColor;
            width: 2rem;
        }
        .nav-btn:hover {
            background-color: shade-color($body-tertiary-bg, 3%);
            .text-muted,
            a {
                color: $gray-900 !important;
            }
        }
    </style>
</footer>
