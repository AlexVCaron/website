---
//NOTE: When updating this file, check remark-callouts.js for similar changes.

const { title } = Astro.props;

export interface Props {
    title: string;
}

const admonitionTypes = {
    note: {
        id: 'secondary',
        svg: 'M11 9h2V7h-2m1 13c-4.41 0-8-3.59-8-8s3.59-8 8-8s8 3.59 8 8s-3.59 8-8 8m0-18A10 10 0 0 0 2 12a10 10 0 0 0 10 10a10 10 0 0 0 10-10A10 10 0 0 0 12 2m-1 15h2v-6h-2v6Z',
    },
    info: {
        id: 'info',
        svg: 'M9 22a1 1 0 0 1-1-1v-3H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2h-6.1l-3.7 3.71c-.2.19-.45.29-.7.29H9m1-6v3.08L13.08 16H20V4H4v12h6m3-6h-2V6h2v4m0 4h-2v-2h2v2Z',
    },
    warning: { id: 'warning', svg: 'M12 2L1 21h22M12 6l7.53 13H4.47M11 10v4h2v-4m-2 6v2h2v-2' },
    danger: {
        id: 'danger',
        svg: 'M8.27 3L3 8.27v7.46L8.27 21h7.46L21 15.73V8.27L15.73 3M8.41 7L12 10.59L15.59 7L17 8.41L13.41 12L17 15.59L15.59 17L12 13.41L8.41 17L7 15.59L10.59 12L7 8.41',
    },
};
---

<div class={`mb-4 admonition admonition-${admonitionTypes[title].id}`}>
    <div class={`admonition-body p-0 rounded-1 rounded-top-2 alert alert-${admonitionTypes[title].id}`}>
        <div
            class={`title fw-bold px-3 py-2 d-flex align-items-center rounded-top-1 text-bg-${admonitionTypes[title].id}`}
        >
            <svg class="icon fill-current me-2" viewBox="0 0 24 24"><path d={admonitionTypes[title].svg}></path></svg>
            {title.charAt(0).toUpperCase() + title.slice(1)}
        </div>
        <div class="p-3 pt-0">
            <slot />
        </div>
    </div>
</div>
