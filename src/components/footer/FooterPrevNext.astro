---
import SubFooter from '@components/footer/SubFooter.astro';
export interface Props {
    md_github_url?: string;
    prev_page: { title: string; slug: string } | null;
    next_page: { title: string; slug: string } | null;
}
const { md_github_url, prev_page, next_page } = Astro.props;
---

<footer class="d-flex justify-content-around mb-3">
    {
        prev_page && (
            <a
                class="btn btn-outline-secondary d-flex flex-column align-items-end py-md-3 py-2 px-3 px-md-5 text-decoration-none text-end"
                href={prev_page.slug}
            >
                <span class="d-none d-md-inline">Previous: </span>
                <i class="fa-solid fa-arrow-left me-1 d-md-none" />
                <span class="fw-semibold text-secondary-emphasis">{prev_page.title}</span>
            </a>
        )
    }
    {
        next_page && (
            <a
                class="btn btn-outline-secondary d-flex flex-column align-items-start py-md-3 py-2 px-3  px-md-5 text-decoration-none text-start"
                href={next_page.slug}
            >
                <span class="d-none d-md-inline">Next: </span>
                <i class="fa-solid fa-arrow-right ms-1 d-md-none" />
                <span class="fw-semibold text-secondary-emphasis">{next_page.title}</span>
            </a>
        )
    }
</footer>
<SubFooter {md_github_url} />
<style lang="scss">
    @import '@styles/_variables.scss';
    svg {
        fill: currentColor;
        width: 2rem;
    }
</style>
