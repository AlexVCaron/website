---
import { Icon } from 'astro-icon';

const {
    title,
    icon_name,
    icon_color,
    icon_class,
    icon2_name,
    icon2_color,
    icon2_class,
    fontawesome,
    btn_txt,
    btn_href,
} = Astro.props;
---

<div class="card h-100 shadow-sm">
    <div class="card-body">
        <h5 class="card-title">{title}</h5>
        <div class="d-flex align-items-center">
            <p class="card-text"><slot /></p>
            {icon_name && <Icon name={icon_name} color={icon_color} class={icon_class + ' ms-3'} />}
            {icon2_name && <Icon name={icon2_name} color={icon2_color} class={icon2_class + ' ms-3'} />}
            <i class={fontawesome + ' fa-5x ms-3'}></i>
        </div>
        {
            btn_txt && btn_href && (
                <a href={btn_href} class="btn btn-sm btn-outline-success arrow-hover">
                    <span>{btn_txt}</span>
                </a>
            )
        }
    </div>
</div>
