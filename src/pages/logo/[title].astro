export const prerender = false;

const { title } = Astro.params;

const t = Astro.url.searchParams.get('t');
const f = Astro.url.searchParams.get('f');
const w = Astro.url.searchParams.get('w');
const s = Astro.url.searchParams.get('s');
const theme = Astro.url.searchParams.get('theme');

// construct search params
const params = new URLSearchParams();
if (t) params.set('t', t);
if (f) params.set('f', f);
if (w) params.set('w', w);
if (s) params.set('s', s);
if (theme) params.set('theme', theme);

return Astro.redirect(`https://oldsite.nf-co.re/logo/${title}${params.toString() ? `?${params.toString()}` : ''}`);
