---
import pipelines_json from '../../../public/pipelines.json';
import ListingLayout from '../../layouts/ListingLayout.astro';

const pipelines = pipelines_json.remote_workflows;
const title = 'Pipelines';
const description = `We currently have ${pipelines.length} pipelines available.`;


var num_archived = 0;
var sorted_by = 0;
var display_as = 0;
---

<ListingLayout title description input={pipelines}>
</ListingLayout>

<style>

	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
		color: #444;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent));
	}
    .card.col {
        min-width: 40%;
    }
    .badge.text-success{
        font-weight: 400;
    }
    .gh-stats{
        float: right;
    }
    .stargazers .fa:hover{
            font-weight: 900;
        }
</style>
